<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>registration</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
        integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link href="/assets/css/errormessages.css" rel="stylesheet">
    <link rel="stylesheet" href="/auth/register.css">
    <link href="/assets/img/logo-white.png" rel="icon">

</head>

<body>

    <div class="container">
        <div class="row align-items-center" style="height: 100vh;">
            <div class="col-md-6 offset-md-3  rounded py-4">
                <h1 style="text-align: center;">ZERO TO ONE</h1>

                <!-- FORM -->
                <% if (errorMassage) { %>
                    <div class="user-message  user-message--error">
                        <h3>
                            <%= errorMassage %>
                        </h3>
                    </div>
                    <% } %>
                        <br><br>
                        <form method="POST" action="/auth/Register" novalidate>
                            <!-- TEXT FIELD GROUPS -->

                            <div class="form-group">
                                <input
                                    class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid blinking' : '' %>"
                                    name="email" type="email" id="email" placeholder="Enter email"
                                    value="<%= oldInput.email %>">
                            </div>
                            <div class="form-group">
                                <input
                                    class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid blinking' : '' %>"
                                    name="password" type="password" id="password" placeholder="Password"
                                    value="<%= oldInput.password %>">
                            </div>
                            <div class="form-group">
                                <input
                                    class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid blinking' : '' %>"
                                    name="confirmPassword" type="password" id="password2" placeholder="Confrim password"
                                    value="<%= oldInput.confirmPassword %>">
                            </div>
                            <button class="btn btn-dark btn-block mb-3 button custom-btn btn-16"
                                type="submit">Submit</button>
                            <a href="/auth/Login">Already have an account?</a>
                        </form>
            </div>
        </div>
    </div>

    <!-- bootstrap scripts -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"
        integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
        crossorigin="anonymous"></script>


</body>

</html>
