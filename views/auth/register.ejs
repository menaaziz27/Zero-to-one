<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layouts/head.ejs') %>
        <title>Registration</title>
        <link href="/assets/css/errormessages.css" rel="stylesheet">
        <link href="/auth/auth.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="row align-items-center" style="height: 100vh;">
            <div class="py-4 rounded col-md-6 offset-md-3">
                <!-- FORM -->
                <form method="POST" action="/auth/register" novalidate>
                    <h2>Create account</h2>
                    <!-- TEXT FIELD GROUPS -->
                    <% if (errorMassage) { %>
                        <div class="user-message user-message--error">
                            <h3 class="animate">
                                <%= errorMassage %>
                            </h3>
                        </div>
                        <% } %>

                            <div class="form-group">
                                <input class="form-control <%= validationErrors.find(e => e.param === 'name') ? 'invalid blinking' : '' %>" name="name" type="text" id="name" placeholder="Name" value="<%= oldInput.name %>">
                            </div>
                            <div class="form-group">
                                <input class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid blinking' : '' %>" name="email" type="email" id="email" placeholder="Enter email" value="<%= oldInput.email %>">
                            </div>
                            <div class="form-group">
                                <input class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid blinking' : '' %>" name="password" type="password" id="password" placeholder="Password" value="<%= oldInput.password %>">
                            </div>
                            <div class="form-group">
                                <input class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid blinking' : '' %>" name="confirmPassword" type="password" id="password2" placeholder="Confrim password" value="<%= oldInput.confirmPassword %>">
                            </div>
                            <button class="mb-3 btn btn-primary btn-block button custom-btn btn-16" type="submit">Submit</button>
                            <a href="/auth/login">Already have an account?</a>
                            <input type="hidden" name="redirectTo" value="<%= redirectTo %>">
                </form>
            </div>
        </div>
    </div>
    <!-- bootstrap scripts -->
    <%- include('../layouts/strapAndJQuery.ejs') %>
</body>

</html>