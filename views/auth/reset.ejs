<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layouts/head.ejs') %>
        <title>Reset Password</title>
        <link href="/assets/css/errormessages.css" rel="stylesheet">
        <link href="/auth/auth.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="row align-items-center" style="height: 100vh;">
            <div class="py-4 rounded col-md-6 offset-md-3">
                <form method="POST" action="/auth/reset" novalidate>
                    <h2>Reset Password</h2>
                    <% if (errorMassage) { %>
                        <h3 class="user-message user-message--error animate">
                            <%= errorMassage %>
                        </h3>
                        <% } %>
                            <!-- TEXT FIELD GROUPS -->

                            <div class="form-group">
                                <input class="form-control" name="email" type="email" id="email" placeholder="Email">
                            </div>
                            <button class="mx-auto btn btn-primary btn-block button custom-btn btn-16" type="submit">RESET
                                PASSWORD</button>
                </form>
            </div>
        </div>
    </div>
    <!-- bootstrap scripts -->
    <%- include('../layouts/strapAndJQuery.ejs') %>
</body>

</html>