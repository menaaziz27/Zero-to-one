<body>
    <%- include('../layouts/navbar.ejs') %>

        <div class="container">

            <div style="background-color: #eef0f1;border-radius: 10px; margin: 8px;" class="row align-items-center">
                <div class="py-4 rounded col-md-6 offset-md-3">
                    <h3 style="text-align: center;">Update Post Information</h3>
                    <!-- FORM -->
                    <!-- <form action="/users/profile" method="POST" enctype="multipart/form-data"> -->
                    <form action="/admin/dashboard/posts/edit" method="POST" enctype="multipart/form-data" id="submit">
                        <!-- TEXT FIELD GROUPS -->
                        <div class="form-group">
                            <label for="password">Post</label>
                            <textarea style="resize: none;" class="form-control" name="description" id="post"
                            rows="3"><%= post.description %></textarea>
                        </div>
                        <input type="hidden" name="postid" value="<%= post._id%>">
                        <br>
                        <div class="row">
                            <div class="col-6">
                                <a class="mx-auto btn btn-outline-dark btn-block"
                                    href="/admin/dashboard/posts">BACK</a>
                            </div>
                            <div class="col-6">
                                <button class="mx-auto btn btn-success btn-block" type="submit">UPDATE</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <br><br><br><br><br><br>
        <%- include('../layouts/footer.ejs') %>

