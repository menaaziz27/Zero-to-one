<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layouts/head.ejs') %>

        <title>Edit Profile</title>
        <!-- bootstrap css -->
        <link href="/assets/css/style.css" rel="stylesheet">
        <link href="/assets/css/navbar.css" rel="stylesheet">
        <link rel="stylesheet" href="/assets/css/scrollbar.css">
        <link rel="stylesheet" href="/assets/css/edit-post.css">
</head>


<body>
    <!-- NAVBAR -->
    <%- include('../layouts/navbar.ejs') %>

        <div class="container">
            <div class="row align-items-center" style="height: 600px;">
                <div class="col-md-6 offset-md-3  border border-primary rounded py-4-center">
                    <h3 style="text-align: center;">Update post</h3>
                    <!-- FORM -->
                    <form action="<% if(timeline){ %>/posts/<%= post._id%>/edit?timeline=true <%}%>/posts/<%= post._id %>/edit" method="POST">
                        <div class="card-body">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                                    <div class="form-group">
                                        <textarea style="resize: none;" class="form-control" name="description" id="post" rows="3"><%=post.description%></textarea>
                                        <input type="hidden" name="userid" value="<%= userid %>">
                                    </div>
                                </div>
                            </div>

                            <div class="text-right">
                                <a href="<% if(timeline) { %>/timeline <%} else {%>/users/profile/<%= userid %> <%}%>" class="btn btn-outline-dark">Back</a>
                                <button type="submit" class="btn btn-primary">Edit</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <!--FOOTER-->
        <%- include('../layouts/footer.ejs') %>
            <!-- bootstrap scripts -->
            <script>
                /* eslint-disable */
                var userLoggedIn = <%- JSON.stringify(userLoggedIn) %>
            </script>
            <%- include('../layouts/strapAndJQuery.ejs') %>

</body>

</html>